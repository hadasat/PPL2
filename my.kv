<MainWindow>:
    name: "main"

    current_location: current_location
    time: time
    num_Recommendations: num_Recommendations
    birth_year: birth_year
    female: female
    male: male

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'bg.png'

    GridLayout:

        canvas.before:
            Color:
                rgba: 1, 1, 1, 0.7
            Rectangle:
                pos: self.pos
                size: self.size
        cols: 1
        size: root.width * 0.6, root.height * 1.5
        row_default_height: 40
        row_force_default: True
        size_hint_x:0.47
        size_hint_y:0.7
        center: root.width/3 , root.height

        Label:
            text:"current location: "
            font_size: 30
            color:(0,0,0,1)
            bold: True
            font_name: 'SouthDjakartaDemo.ttf'

        TextInput:
            id: current_location
            font_size: 20
            multiline: False


        Label:
            text:"time: "
            font_size: 30
            color:(0,0,0,1)
            bold: True
            font_name: 'SouthDjakartaDemo.ttf'


        TextInput:
            id: time
            font_size: 20
            multiline: False

        Label:
            text:"Recommendations amount: "
            font_size: 30
            color:(0,0,0,1)
            bold: True
            font_name: 'SouthDjakartaDemo.ttf'

        TextInput:
            id: num_Recommendations
            font_size: 20
            multiline: False

        Label:
            text:"Birth year: "
            font_size: 30
            color:(0,0,0,1)
            bold: True
            font_name: 'SouthDjakartaDemo.ttf'

        TextInput:
            id: birth_year
            font_size: 20
            multiline: False


        GridLayout:

            cols: 4
            size: root.width, root.height
            row_default_height: 40
            background_color: (0,0,1,1)


            Label:
                text:"Female: "
                font_size: 30
                color:(0,0,0,1)
                bold: True
                font_name: 'SouthDjakartaDemo.ttf'
                bcolor: 1,0,0,1


            CheckBox:
                id: female
                group: 'gender'
                visible: True
                on_active: root.active_female()
                color:(0.2,0,0.2,1)

            Label:
                text:"Male: "
                font_size: 30
                color:(0,0,0,1)
                bold: True
                font_name: 'SouthDjakartaDemo.ttf'

            CheckBox:
                id: male
                group: 'gender'
                on_active: root.active_male()
                color:(0.2,0,0.2,1)


        Button:
            font_size: 30
            text: "submit"
            font_name: 'SouthDjakartaDemo.ttf'
            on_release:
                root.searchBtn()






<Pop>:

    pop_text: pop_text

    GridLayout:

        cols: 1
        row: 2
        size: root.width, root.height*0.2
        center: self.parent.width , self.parent.height*0.65
        Label:
            id: pop_text
            text: "Search for Recomandetion"
            font_size: 20
            color:(0,0,0,1)
            font_name: 'SouthDjakartaDemo.ttf'
            bold: True