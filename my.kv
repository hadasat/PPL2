<MainWindow>:
    name: "main"

    current_location: current_location
    time: time
    num_Recommendations: num_Recommendations
    birth_year: birth_year
    gender: gender

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'bg.png'

    GridLayout:
        cols: 1
        size: root.width * 0.6, root.height * 0.7
        row_default_height: 40
        row_force_default: True
        size_hint_x:0.5
        center: root.width/3 , root.height/3

        Label:
            text:"current location: "
            font_size: 30
            color:(0,0,0,1)
            bold: True
            font_name: 'SouthDjakartaDemo.ttf'

        TextInput:
            id: current_location
            font_size: 20
            multiline: False


        Label:
            text:"time: "
            font_size: 30
            color:(0,0,0,1)
            bold: True
            font_name: 'SouthDjakartaDemo.ttf'


        TextInput:
            id: time
            font_size: 20
            multiline: False

        Label:
            text:"Recommendations amount: "
            font_size: 30
            color:(0,0,0,1)
            bold: True
            font_name: 'SouthDjakartaDemo.ttf'

        TextInput:
            id: num_Recommendations
            font_size: 20
            multiline: False

        Label:
            text:"Birth year: "
            font_size: 30
            color:(0,0,0,1)
            bold: True
            font_name: 'SouthDjakartaDemo.ttf'

        TextInput:
            id: birth_year
            font_size: 20
            multiline: False

        Label:
            text:"Gender: "
            font_size: 30
            color:(0,0,0,1)
            bold: True
            font_name: 'SouthDjakartaDemo.ttf'

        TextInput:
            id: gender
            font_size: 20
            multiline: False


        Button:
            font_size: 30
            text: "submit"
            font_name: 'SouthDjakartaDemo.ttf'
            on_release:
                root.searchBtn()


<Pop>:

    pop_text: pop_text
    popBtn: popBtn

    GridLayout:

        cols: 2
        size: root.width, root.height*0.2
        center: self.parent.width , self.parent.height*0.65
        Label:
            id: pop_text
            font_size: 25
            color:(0,0,0,1)
            font_name: 'SouthDjakartaDemo.ttf'
            bold: True

        Button:
            id: popBtn
            text: "try again"
            font_name: 'SouthDjakartaDemo.ttf'
            on_release: root.closeBtn()




